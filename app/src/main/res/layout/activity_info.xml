<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InfoActivity">

    <TextView
        android:id="@+id/TravelDescription_Text"
        android:layout_width="343dp"
        android:layout_height="25dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="237dp"
        android:text="If you do not use any of these just leave them blank!"
        app:layout_constraintBottom_toTopOf="@+id/TravelContinue_Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/trainTravel_Switch"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/travelDescription_Text"
        android:layout_width="269dp"
        android:layout_height="30dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="60dp"
        android:text="Please toggle all those that apply to you!"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TravelTitle_Text" />

    <Switch
        android:id="@+id/carTravel_Switch"
        android:layout_width="81dp"
        android:layout_height="26dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="270dp"
        android:layout_marginBottom="30dp"
        android:text="Car"
        app:layout_constraintBottom_toTopOf="@+id/trainTravel_Switch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/busTravel_Switch" />

    <TextView
        android:id="@+id/TravelTitle_Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="176dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="176dp"
        android:layout_marginBottom="30dp"
        android:fontFamily="serif"
        android:text="Travel"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/travelDescription_Text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.325" />

    <Switch
        android:id="@+id/busTravel_Switch"
        android:layout_width="81dp"
        android:layout_height="26dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="270dp"
        android:layout_marginBottom="30dp"
        android:text="Bus"
        app:layout_constraintBottom_toTopOf="@+id/carTravel_Switch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/travelDescription_Text" />

    <Switch
        android:id="@+id/trainTravel_Switch"
        android:layout_width="81dp"
        android:layout_height="26dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="270dp"
        android:text="Train"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/carTravel_Switch" />

    <TextView
        android:id="@+id/TravelQuestion_Text"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="154dp"
        android:text="How do you travel on a day to day basis?"
        app:layout_constraintBottom_toTopOf="@+id/busTravel_Switch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TravelDescription_Text" />

    <Button
        android:id="@+id/TravelContinue_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="275dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="60dp"
        android:text="Continue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/currentMoney_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="171dp"
        android:layout_marginBottom="65dp"
        android:text="0"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/TravelContinue_Button"
        app:layout_constraintStart_toEndOf="@+id/currentMoneyPoundSign_TextView" />

    <TextView
        android:id="@+id/currentMoneyPoundSign_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="61dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="65dp"
        android:text="Â£"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/currentMoney_TextView"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/money_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginEnd="298dp"
        android:layout_marginBottom="5dp"
        android:text="Funds left:"
        app:layout_constraintBottom_toTopOf="@+id/currentMoney_TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>